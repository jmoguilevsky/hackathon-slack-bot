{
  "name": "slackbot",
  "version": "0.0.1",
  "description": "A slackbot",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc",
    "start": "node .",
    "start:prod": "yarn run build && yarn run start",
    "dev": "concurrently 'tsc --watch --preserveWatchOutput' 'nodemon --inspect .'",
    "test": "concurrently 'tsc --watch --preserveWatchOutput' 'nodemon ./dist/testing/test'",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jmoguilevsky/hackathon-slack-bot.git"
  },
  "author": "toblich",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "express-openapi-validator": "^4.2.0",
    "helmet": "^4.1.1",
    "http-errors": "^1.8.0",
    "isomorphic-fetch": "^3.0.0",
    "node-html-to-image": "^3.1.0",
    "puppeteer": "^8.0.0",
    "superagent": "^6.1.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.8",
    "@types/http-errors": "^1.8.0",
    "@types/isomorphic-fetch": "^0.0.35",
    "@types/node": "^14.11.5",
    "@types/superagent": "^4.1.10",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "concurrently": "^5.3.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.10.0",
    "eslint-config-prettier": "^8.2.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": ">=6",
    "lint-staged": "^10.4.0",
    "nodemon": "^2.0.4",
    "prettier": "^2.1.2",
    "pretty-quick": "^3.0.2",
    "typescript": "^4.0.3"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --cache --fix",
    "*.{js,ts,css,md}": "prettier --write"
  }
}
